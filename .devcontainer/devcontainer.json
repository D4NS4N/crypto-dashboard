{
  "name": "crypto-dashboard-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "python -m venv first.venv && source first.venv/bin/activate && pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "forwardPorts": [3997],
  "portsAttributes": {
    "3997": {
      "label": "Crypto Dashboard",
      "onAutoForward": "openBrowser"
    }
  }
}